
import React from 'react';
import Slider from 'react-slick';
import 'slick-carousel/slick/slick.css';
import 'slick-carousel/slick/slick-theme.css';

// Replace or extend this array with your actual slide data
const slideData = [
  {
    image: '/images/slider/shoe.jpg',
    logos: ['/images/brands/adidas.png', '/images/brands/puma.png'],
    moreText: '& more',
    subtitle: 'STYLE FIESTA',
    title: 'FOOTWEAR CARNIVAL',
    discount: '30-60% OFF*',
  },
  // Add more slide objects here, e.g.:
  // {
  //   image: '/images/slider/another-slide.jpg',
  //   logos: ['/images/brands/brand1.png', '/images/brands/brand2.png'],
  //   moreText: '& more',
  //   subtitle: 'NEW ARRIVALS',
  //   title: 'WINTER COLLECTION',
  //   discount: '40-70% OFF*',
  // },
];

const MultiCarousel = () => {
  const settings = {
    dots: false,
    infinite: true,
    speed: 500,
    slidesToShow: 4,
    slidesToScroll: 1,
    arrows: true,
    responsive: [
      { breakpoint: 1024, settings: { slidesToShow: 3 } },
      { breakpoint: 640,  settings: { slidesToShow: 1 } },
    ],
  };

  return (
    <Slider {...settings}>
      {slideData.map((slide, i) => (
        <div key={i} className="px-2">
          <div className="bg-white rounded-3xl flex overflow-hidden">
            <img
              src={slide.image}
              alt={slide.title}
              className="w-1/2 object-cover"
            />
            <div className="w-1/2 p-4 flex flex-col items-center justify-center">
              <div className="flex space-x-4 mb-2 items-center">
                {slide.logos.map((logo, idx) => (
                  <img key={idx} src={logo} alt="" className="h-6" />
                ))}
                <span className="font-semibold">{slide.moreText}</span>
              </div>
              <h3 className="text-lg font-medium mb-1">{slide.subtitle}</h3>
              <h2 className="text-xl font-bold mb-2">{slide.title}</h2>
              <p className="text-2xl font-extrabold mb-2">{slide.discount}</p>
              <button className="bg-gray-900 text-white px-4 py-1 rounded hover:bg-gray-800">
                SHOP
              </button>
            </div>
          </div>
        </div>
      ))}
    </Slider>
  );
};

export default MultiCarousel;
